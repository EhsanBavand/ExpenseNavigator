<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] Expense Navigator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseNavigator.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <style>

    </style>

    <!-- Other head elements -->
</head>
<body>
    <header>
        <div class="row col-lg-12 p-0 m-0">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 p-0">
                <div class="container-fluid m-0 p-0 ">
                    <div class="p-0 m-0 navbar-collapse collapse">
                        <img src="~/Img/icon-gold-new.png" alt="Icon" class="logo-img" style="opacity:0.5 "/>
                        <a class="header-style navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Expense Navigator</a>
                        <a class="header-style navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Contact Us</a>
                        <a class="header-style navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Help</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="col-lg-2 p-0 m-0">
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse header-style">
                            <partial name="_LoginPartial.cshtml" />
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Expense Navigator Team
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
