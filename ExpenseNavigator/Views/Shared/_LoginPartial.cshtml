@using Microsoft.AspNetCore.Identity
@using ExpenseNavigator.Areas.Identity.Data

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link lg-lo me-1 p-2 rounded-1 " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link lg-lo ms-1 p-2 rounded-2 text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Sing In</a>
        </li>
    }
</ul>
